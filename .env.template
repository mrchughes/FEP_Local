# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to git

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Domain Configuration (MUST be mrchughes.site for security)
DOMAIN_NAME=mrchughes.site
APP1_SUBDOMAIN=app1
APP2_SUBDOMAIN=app2

# Backend Configuration
DYNAMO_TABLE_NAME=mern-app-users
S3_BUCKET_NAME=your-s3-bucket-name
JWT_SECRET=your-super-secure-jwt-secret-here

# Database Configuration (if using MongoDB instead of DynamoDB)
# MONGODB_URI=mongodb://localhost:27017/mern-app

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api

# Development Settings
NODE_ENV=development
PORT=5000

# Docker/Container Settings
FRONTEND_PORT=80
BACKEND_PORT=5000

# Terraform Variables
TF_VAR_domain_name=your-domain.com
TF_VAR_app1_subdomain=mern
TF_VAR_app2_subdomain=python
TF_VAR_aws_region=eu-west-2

# ECR Repository URLs (fill after terraform apply)
ECR_REPO_FRONTEND=123456789012.dkr.ecr.eu-west-2.amazonaws.com/mern-app-frontend
ECR_REPO_BACKEND=123456789012.dkr.ecr.eu-west-2.amazonaws.com/mern-app-backend
